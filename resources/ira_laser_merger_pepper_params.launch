<launch>
        <node pkg="ira_laser_tools" name="laserscan_multi_merger" type="laserscan_multi_merger" output="screen">
        	<param name="destination_frame" value="base_footprint"/>
		<param name="cloud_destination_topic" value="/merged_cloud"/>
		<param name="scan_destination_topic" value="/pepper_laser_merged"/>
                <param name="laserscan_topics" value ="/laser/srd_left/scan /laser/srd_front/scan /laser/srd_right/scan" /> <!-- LIST OF THE LASER SCAN TOPICS TO SUBSCRIBE -->

                <param name="angle_min" value="-2.0"/>
                <param name="angle_max" value="2.0"/>
                <param name="angle_increment" value="0.0085"/>
                <param name="scan_time" value="0.0333333"/>
                <param name="range_min" value="0.1"/>
                <param name="range_max" value="7.0"/>

	</node>
</launch>
